<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.mobiketeam.mobike.UpdateRouteActivity">

        <TextView
            android:id="@+id/account_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="@string/account_nickname_label"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/account_nickname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_nickname"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/abc_edit_text_material"
            android:hint="@string/account_nickname_label"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/account_bikemodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_nickname_text"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="@string/account_bikemodel_label"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/account_bikemodel_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_bikemodel"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/abc_edit_text_material"
            android:hint="@string/account_bikemodel_label"
            android:maxLines="3"
            android:minLines="1" />


        <Button
            android:id="@+id/done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/account_bikemodel_text"
            android:layout_margin="20dp"
            android:background="@drawable/blue_button"
            android:text="Done"
            android:textColor="@color/white" />

    </RelativeLayout>
</ScrollView>
