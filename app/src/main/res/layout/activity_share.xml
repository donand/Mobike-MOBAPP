<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobike.mobike.ShareActivity">

    <!-- i bottoni facebook e google+ sono indicativi, sono da sostituire -->

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

    <Button
        android:id="@+id/facebook_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:padding="5dp"
        android:text="Facebook"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/com_facebook_inverse_icon"
        android:drawableStart="@drawable/com_facebook_inverse_icon"
        android:drawablePadding="10dp"
        android:background="@drawable/com_facebook_button_like_background"
        android:gravity="center_vertical"/>

        <Button
            android:id="@+id/google_plus_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:padding="5dp"
            android:text="Google+"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_google_plus_white_24dp"
            android:drawableStart="@drawable/ic_google_plus_white_24dp"
            android:drawablePadding="10dp"
            android:background="@color/google_plus_color"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <Button android:text="@string/share"
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/linear_layout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blue_button"/>

    <TextView
        android:id="@+id/url_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:autoLink="web"
        android:layout_above="@id/linear_layout"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/message_url_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/share_textview"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_above="@id/url_textview"/>

    <Button
        android:id="@+id/new_route_button"
        android:text="@string/record_new_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:background="@drawable/blue_button"/>

</RelativeLayout>
